<h3> <%=@operation%> todo</h3>
<hr>
<%= form_for @new_todo, :url => { :action => "create" }  do |f|  %>
  <table>
   <tr>
    <td>
     ToDo:
    </td>
    <td>
     <%= f.text_field  :todo_item %>
    </td>
   </tr>
   <tr>
    <td>
     Final Date:
    </td>
    <td>
     <%= f.text_field :todo_date , :id =>"datetimepicker1"%>
    </td>
   </tr>
</table>
<a class="btn btn-success" href="<%=root_path%>">Back</a>
<%= f.submit "#{@operation} todo", class: "btn btn-success" %>
<%end%>

