<h3> <%=@operation%> todo</h3>
<hr>
<%= form_for @new_todo, :url => { :action => @action }  do |f|  %>
  <table class="span6">
   <tr>
    <td>
     ToDo:
    </td>
    <td>
     <%= f.text_field  :todo_item %>
    </td>
   </tr>
   <tr>
    <td>
     Final Date:
    </td>
    <td>
     <%= f.text_field :todo_date , :id =>"datetimepicker1", :value => f.object.todo_date.blank? ? "": custom_time(f.object.todo_date)%>
    </td>
   </tr>
   <tr>
    <td valign="top">
     Description:
    </td>
    <td>
     <%= f.text_area :description, size: "70x10"%>
    </td>
   </tr>
</table>
<a class="btn btn-success" href="<%=root_path%>">Back</a>
<%= f.submit "#{@operation} todo", class: "btn btn-success" %>
<%end%>

